variables:
  RELEASE_BRANCH: 'release-0.7'
  PROJECT_SSH: "git@github.lan:${CI_PROJECT_NAMESPACE}/${CI_PROJECT_NAME}.git"
  REMOTE_SSH:  "git@github.com:mambaru/${CI_PROJECT_NAME}.git"

before_script:
  - git submodule update --init

stages:
  - build
  - check
  - merge
  - publish
  - clean
  
base-build:
  stage: build
  script:
    - ./.ci/build-and-test.sh g++ 11 Release
  only:
    - devel
    - tags
    - /^build.*$/
    - /^devel-.*$/
    - /^RC.*$/

build-g++11:
  stage: build
  script:
    - ./.ci/build-and-test.sh g++ 11 Debug
  only:
    - tags
    - /^build.*$/
    - /^RC.*$/

build-g++14:
  stage: build
  script:
    - ./.ci/build-and-test.sh g++ 14 Release
    - ./.ci/build-and-test.sh g++ 14 Debug
  only:
    - tags
    - /^build.*$/
    - /^RC.*$/

build-clang++11:
  stage: build
  script:
    - ./.ci/build-and-test.sh clang++ 11 Release
    - ./.ci/build-and-test.sh clang++ 11 Debug
  only:
    - tags
    - /^build.*$/
    - /^RC.*$/

build-clang++14:
  stage: build
  script:
    - ./.ci/build-and-test.sh clang++ 14 Release
    - ./.ci/build-and-test.sh clang++ 14 Debug
  only:
    - tags
    - /^build.*$/
    - /^RC.*$/

cppcheck:
  stage: check
  script:
    - ./.ci/cppcheck-ci.sh --std=c++11
    - ./.ci/cppcheck-ci.sh --std=c++14
  only:
    - tags
    - /^check.*$/
    - /^RC.*$/

tagged-release:
  stage: merge
  script:
    - echo git push -f ${PROJECT_SSH} ${CI_COMMIT_REF_NAME}:refs/heads/${RELEASE_BRANCH}
    - git push -f ${PROJECT_SSH} ${CI_COMMIT_REF_NAME}:refs/heads/${RELEASE_BRANCH}
  only:
    - tags

master-MR-R:
  stage: merge
  script:
    - if [ "${RELEASE_BRANCH}" != "${CI_COMMIT_REF_NAME}" ]; then exit 1; fi
    - HOST=${CI_PROJECT_URL}  CI_PROJECT_ID=${CI_PROJECT_ID} GITLAB_USER_ID=${GITLAB_USER_ID} PRIVATE_TOKEN=${PRIVATE_TOKEN} ./.ci/automr.sh master
  only:
    - /^release.*$/

master-MR-RC:
  stage: merge
  script:
    - HOST=${CI_PROJECT_URL}  CI_PROJECT_ID=${CI_PROJECT_ID} GITLAB_USER_ID=${GITLAB_USER_ID} PRIVATE_TOKEN=${PRIVATE_TOKEN} ./.ci/automr.sh master true
  only:
    - /^RC.*$/

devel-MR:
  stage: merge
  script:
    - HOST=${CI_PROJECT_URL}  CI_PROJECT_ID=${CI_PROJECT_ID} GITLAB_USER_ID=${GITLAB_USER_ID} PRIVATE_TOKEN=${PRIVATE_TOKEN} ./.ci/automr.sh devel true
  only:
    - /^devel-.*$/

delete-branches:
  stage: clean
  script:
    - git push ${PROJECT_SSH} :${CI_COMMIT_REF_NAME}
  only:
    - /^build.*$/
    - /^check.*$/

push-to-github:
  stage: publish
  only:
    - master
  script:
    - git branch -f mambaru
    - git checkout mambaru
    - git push -f ${REMOTE_SSH} mambaru
    - git push -f --tags ${REMOTE_SSH} mambaru
    - doxygen
    - cd docs/html
    - git init 
    - git add .
    - git commit -m "doxygen"
    - git push -f ${REMOTE_SSH} master:gh-pages
